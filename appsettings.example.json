{
  "BatteryManager": {
    // Upper battery threshold (percentage)
    // When battery reaches this level AND AC is connected, trigger high battery alert
    // Alert clears when battery drops below (upperThreshold - 1) OR AC is disconnected
    // Valid range: 50-100 (recommended: 80)
    "upperThreshold": 80,

    // Lower battery threshold (percentage)
    // When battery reaches this level AND AC is NOT connected, trigger low battery alert
    // Alert clears when battery rises above (lowerThreshold + 1) OR AC is connected
    // Valid range: 5-50 (recommended: 20)
    "lowerThreshold": 20,

    // Battery status polling interval (seconds)
    // How frequently to check battery percentage and AC connection status
    // Lower values = more responsive but slightly higher CPU usage
    // Valid range: 5-60 (recommended: 15)
    "pollIntervalSeconds": 15,

    // Voice prompt repeat interval (minutes)
    // How often to repeat the voice prompt when an alert is active
    // Voice plays immediately when alert triggers, then repeats at this interval
    // Valid range: 0.5-10 (recommended: 1)
    "voiceRepeatMinutes": 1
  },

  "Logging": {
    "LogLevel": {
      // Minimum log level for all categories
      // Options: Trace, Debug, Information, Warning, Error, Critical, None
      "Default": "Information",
      
      // Log level for Microsoft.Hosting.Lifetime (service start/stop events)
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}

// Example configurations for different scenarios:

// Conservative battery protection (stricter thresholds):
// "upperThreshold": 75,
// "lowerThreshold": 25,

// Frequent monitoring (more responsive):
// "pollIntervalSeconds": 10,

// Less frequent voice prompts (less annoying):
// "voiceRepeatMinutes": 2,

// Debug logging (troubleshooting):
// "LogLevel": { "Default": "Debug" }
